{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./*"]
    },
    "strict": true,
    "target": "ESNext",
    "types": [
      "node",
      "@types/babel__generator",
      "@types/babel__traverse",
      "@types/jest",
    ],
  },
  "include": [
    "lib/**/*",
  ]
}
