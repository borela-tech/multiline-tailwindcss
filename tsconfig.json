{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./*"]
    },
    "strictNullChecks": true,
    "target": "ESNext",
    "types": [
      "@types/babel__generator",
      "@types/babel__traverse",
      "@types/jest"
    ],
  },
  "include": [
    "lib/**/*",
  ]
}
